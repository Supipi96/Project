                                  input#category-textbox-title.form-control.category-text(type='text')
                              tr
                                td(style='text-align: left;')
                                  | Code:
                                td
                                  input#category-textbox-title.form-control.category-text(type='text')
                              tr
                                td(style='text-align: left;')
                                  | Description:
                                td
                                  input#category-textbox-title.form-control.category-text(type='text')
                              tr
                                td(style='text-align: left;')
                                  | Image:
                                td(style='text-align: left;')
                                  input#customFile.custom-file-input(type='file')
                              tr
                                td(style='text-align: left;')
                                  div(style='font-size:20px')
                                    input#flexCheckDefault.form-check-input(type='checkbox' value='')
                                    |  Active
    h4 Search
    .container-fluid
      #row.row
        .col-md-2
          label.form-label Name
          input#category-name.form-control.textbox(type='text')
        .col-md-2
          label.form-label Code
          input#category-code.form-control.textbox(type='text')
        .col-md-4
          label.form-label Description
          input#category-description.form-control.textbox(type='text')
        .col-md-2
          label.form-label Active
          select.form-select(aria-label='Default select example')
